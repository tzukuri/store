<% content_for :google_analytics do %>
  <% if order_just_completed?(@order) %>
    <%= render partial: 'spree/shared/google_purchase.js', locals: { order: @order } %>
  <% end %>
<% end %>

<div id="order-complete" class="panel container">
  <fieldset id="order_summary" data-hook>
    <h2>Order <%= @order.number %> received</h2>
    <p>Thank you for your order! You should receive a confirmation email shortly.</p>
    <br/>

    <div id="order" data-hook>
      <%= render partial: 'spree/shared/order_details', locals: { order: @order } %>

      <br class="clear" />

      <p data-hook="links">
        <%= link_to '< back to store', spree.root_path, class: "button" %>
      </p>
    </div>
  </fieldset>
</div>
